@page
@model LogoutModel
@{
    ViewData["Title"] = "Đăng xuất";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <i class="bi bi-box-arrow-right text-primary mb-3" style="font-size: 3rem;"></i>
                        <h2 class="mb-3">Đăng xuất</h2>
                        <p class="text-muted mb-4">Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?</p>
                        
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Account/Login")" method="post">
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-box-arrow-right"></i> Đăng xuất
                            </button>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 ms-2">
                                <i class="bi bi-x-circle"></i> Hủy
                            </a>
                        </form>
                    }
                    else
                    {
                        <i class="bi bi-check-circle text-success mb-3" style="font-size: 3rem;"></i>
                        <h2 class="mb-3">Đăng xuất thành công</h2>
                        <p class="text-muted mb-4">Bạn đã đăng xuất khỏi hệ thống.</p>
                        
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập lại
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

