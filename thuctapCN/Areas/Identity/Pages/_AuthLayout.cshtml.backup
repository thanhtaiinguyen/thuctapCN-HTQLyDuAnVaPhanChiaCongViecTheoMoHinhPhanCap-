<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Thực Tập CN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/thuctapCN.styles.css" asp-append-version="true" />
    <style>
        :root {
            --auth-bg-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --auth-card-bg: rgba(255, 255, 255, 0.95);
            --auth-card-border: rgba(255, 255, 255, 0.2);
            --auth-text-primary: #333;
            --auth-text-secondary: #6c757d;
            --auth-input-border: #e9ecef;
            --auth-input-focus: #667eea;
            --auth-link-color: #667eea;
        }

        .dark-mode {
            --auth-bg-gradient: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            --auth-card-bg: rgba(30, 30, 46, 0.95);
            --auth-card-border: rgba(255, 255, 255, 0.1);
            --auth-text-primary: #e5e7eb;
            --auth-text-secondary: #9ca3af;
            --auth-input-border: #404040;
            --auth-input-focus: #8b5cf6;
            --auth-link-color: #8b5cf6;
        }

        body {
            font-family: "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: var(--auth-bg-gradient);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            transition: background 0.3s ease;
        }

        .auth-container {
            width: 100%;
            max-width: 450px;
            position: relative;
        }

        .auth-card {
            background: var(--auth-card-bg);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 40px;
            border: 1px solid var(--auth-card-border);
            transition: background 0.3s ease, border-color 0.3s ease;
        }

        .dark-mode-toggle {
            position: absolute;
            top: -60px;
            right: 0;
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .dark-mode-toggle:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
        }

        .dark-mode-toggle svg {
            width: 22px;
            height: 22px;
            stroke: white;
            fill: none;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .auth-header h2 {
            color: var(--auth-text-primary);
            font-weight: 700;
            margin-bottom: 8px;
            font-size: 28px;
            transition: color 0.3s ease;
        }

        .auth-header p {
            color: var(--auth-text-secondary);
            margin: 0;
            font-size: 14px;
            transition: color 0.3s ease;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-floating > .form-control {
            height: 58px;
            padding-top: 1.625rem;
            padding-bottom: 0.625rem;
            border: 2px solid var(--auth-input-border);
            border-radius: 12px;
            transition: all 0.3s ease;
            background-color: var(--auth-card-bg);
            color: var(--auth-text-primary);
        }

        .form-floating > .form-control:focus {
            border-color: var(--auth-input-focus);
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
            background-color: var(--auth-card-bg);
            color: var(--auth-text-primary);
        }

        .form-floating > label {
            padding: 1rem 0.75rem;
            color: var(--auth-text-secondary);
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .password-toggle-btn {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            color: var(--auth-text-secondary);
            padding: 8px;
            cursor: pointer;
            z-index: 10;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .password-toggle-btn:hover {
            background: rgba(102, 126, 234, 0.1);
            color: var(--auth-input-focus);
        }

        .dark-mode .password-toggle-btn:hover {
            background: rgba(139, 92, 246, 0.2);
        }

        .password-wrapper {
            position: relative;
        }

        .form-check {
            margin-bottom: 20px;
        }

        .form-check-input {
            width: 1.25em;
            height: 1.25em;
            margin-top: 0.25em;
            border: 2px solid #dee2e6;
            border-radius: 6px;
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .form-check-label {
            margin-left: 8px;
            color: var(--auth-text-secondary);
            font-size: 14px;
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .forgot-password-link {
            color: var(--auth-link-color);
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        .forgot-password-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .dark-mode .forgot-password-link:hover {
            color: #a78bfa;
        }

        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 600;
            font-size: 16px;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
            color: white;
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .register-link {
            text-align: center;
            margin-top: 25px;
            padding-top: 25px;
            border-top: 1px solid #e9ecef;
        }

        .register-link p {
            color: #6c757d;
            margin: 0;
            font-size: 14px;
        }

        .register-link a {
            color: #667eea;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }

        .register-link a:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        .validation-summary {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 10px;
            padding: 12px 16px;
            margin-bottom: 20px;
            color: #721c24;
        }

        .dark-mode .validation-summary {
            background: rgba(248, 113, 113, 0.2);
            border-color: rgba(248, 113, 113, 0.4);
            color: #fca5a5;
        }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
        }

        .field-validation-error {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        .dark-mode .field-validation-error {
            color: #f87171;
        }

        .input-group-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 5;
            pointer-events: none;
        }

        .form-floating > .form-control:focus ~ .input-group-icon,
        .form-floating > .form-control:not(:placeholder-shown) ~ .input-group-icon {
            color: #667eea;
        }

        @@media (max-width: 576px) {
            .auth-card {
                padding: 30px 20px;
            }

            .auth-header h2 {
                font-size: 24px;
            }

            .dark-mode-toggle {
                top: -50px;
                width: 40px;
                height: 40px;
            }

            .dark-mode-toggle svg {
                width: 20px;
                height: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container">
        <button id="darkModeToggle" class="dark-mode-toggle" aria-label="Chuyển đổi chế độ sáng/tối">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
        </button>
        <div class="auth-card">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/darkmode.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

