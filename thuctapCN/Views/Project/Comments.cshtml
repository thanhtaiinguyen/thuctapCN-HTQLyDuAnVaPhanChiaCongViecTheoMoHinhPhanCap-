@model IEnumerable<thuctapCN.Models.ProjectCommentViewModel>

@{
    ViewData["Title"] = "Bình luận dự án";
    var projectId = ViewBag.ProjectId;
    var projectName = ViewBag.ProjectName;
    var projectCode = ViewBag.ProjectCode;
    var canComment = ViewBag.CanComment ?? false;
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-comments text-primary me-2"></i>Bình luận dự án
            </h2>
            <p class="text-muted mb-0">
                <span class="badge bg-primary">@projectCode</span>
                @projectName
            </p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Form thêm bình luận -->
    @if (canComment)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">
                    <i class="fas fa-edit me-2"></i>Viết bình luận
                </h5>
                <form asp-action="AddComment" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="projectId" value="@projectId" />
                    <div class="mb-3">
                        <textarea name="content" class="form-control" rows="3" 
                                  placeholder="Nhập nội dung bình luận..." 
                                  maxlength="2000" required></textarea>
                        <div class="form-text">Tối đa 2000 ký tự</div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane me-1"></i>Gửi bình luận
                    </button>
                </form>
            </div>
        </div>
    }

    <!-- Danh sách bình luận -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Tất cả bình luận 
                <span class="badge bg-secondary">@Model.Count()</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-comment-slash fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Chưa có bình luận nào trong dự án này</p>
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var comment in Model)
                    {
                        <div class="list-group-item p-3">
                            <div class="d-flex">
                                <!-- Avatar -->
                                <div class="me-3">
                                    @if (!string.IsNullOrEmpty(comment.UserAvatar))
                                    {
                                        <img src="@comment.UserAvatar" alt="Avatar" 
                                             class="rounded-circle" style="width: 45px; height: 45px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                             style="width: 45px; height: 45px;">
                                            <span class="text-white fw-bold">@comment.UserName.Substring(0, 1).ToUpper()</span>
                                        </div>
                                    }
                                </div>

                                <!-- Nội dung -->
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <strong>@comment.UserName</strong>
                                            <span class="text-muted ms-2" style="font-size: 0.85rem;">
                                                <i class="fas fa-clock me-1"></i>@comment.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                            </span>
                                            @if (comment.UpdatedDate.HasValue)
                                            {
                                                <span class="text-muted ms-2" style="font-size: 0.8rem;">
                                                    (đã sửa)
                                                </span>
                                            }
                                        </div>

                                        <!-- Actions -->
                                        @if (comment.CanEdit || comment.CanDelete)
                                        {
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-link text-muted" type="button" 
                                                        data-bs-toggle="dropdown">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    @if (comment.CanEdit)
                                                    {
                                                        <li>
                                                            <a class="dropdown-item" href="#" 
                                                               onclick="showEditForm(@comment.Id, '@comment.Content.Replace("'", "\\'").Replace("\r\n", "\\n").Replace("\n", "\\n")')">
                                                                <i class="fas fa-edit me-2"></i>Sửa
                                                            </a>
                                                        </li>
                                                    }
                                                    @if (comment.CanDelete)
                                                    {
                                                        <li>
                                                            <form asp-action="DeleteComment" method="post" class="d-inline"
                                                                  onsubmit="return confirm('Bạn có chắc muốn xóa bình luận này?');">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="commentId" value="@comment.Id" />
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="fas fa-trash me-2"></i>Xóa
                                                                </button>
                                                            </form>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    </div>

                                    <!-- Content -->
                                    <div id="content-@comment.Id">
                                        <p class="mb-0" style="white-space: pre-wrap;">@comment.Content</p>
                                    </div>

                                    <!-- Edit Form (ẩn mặc định) -->
                                    <div id="edit-form-@comment.Id" style="display: none;">
                                        <form asp-action="EditComment" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="commentId" value="@comment.Id" />
                                            <textarea name="content" class="form-control mb-2" rows="3" 
                                                      id="edit-content-@comment.Id" maxlength="2000" required></textarea>
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="fas fa-save me-1"></i>Lưu
                                            </button>
                                            <button type="button" class="btn btn-sm btn-secondary" 
                                                    onclick="hideEditForm(@comment.Id)">
                                                Hủy
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showEditForm(commentId, content) {
            document.getElementById('content-' + commentId).style.display = 'none';
            document.getElementById('edit-form-' + commentId).style.display = 'block';
            document.getElementById('edit-content-' + commentId).value = content;
        }

        function hideEditForm(commentId) {
            document.getElementById('content-' + commentId).style.display = 'block';
            document.getElementById('edit-form-' + commentId).style.display = 'none';
        }
    </script>
}
