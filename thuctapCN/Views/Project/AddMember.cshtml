@model thuctapCN.Models.AddMemberViewModel
@{
    ViewData["Title"] = "Thêm thành viên";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus"></i> Thêm thành viên vào dự án
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-folder"></i> <strong>Dự án:</strong> @Model.ProjectName
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <form asp-action="AddMember" method="post">
                                <input type="hidden" asp-for="ProjectId" />
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                <h5>Chọn thành viên mới</h5>
                                @if (Model.AvailableUsers.Any())
                                {
                                    <div class="mb-3">
                                        <select asp-for="SelectedUserIds" class="form-select" multiple size="12">
                                            @foreach (var user in Model.AvailableUsers)
                                            {
                                                <option value="@user.Id">
                                                    @user.FullName - @user.EmployeeCode (@user.Email)
                                                </option>
                                            }
                                        </select>
                                        <div class="form-text">
                                            <i class="bi bi-info-circle"></i> Nhấn Ctrl để chọn nhiều thành viên
                                        </div>
                                        <span asp-validation-for="SelectedUserIds" class="text-danger small"></span>
                                    </div>

                                    <div class="d-grid gap-2 mt-3">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-plus-circle"></i> Thêm thành viên
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-warning">
                                        <i class="bi bi-exclamation-triangle"></i> Tất cả người dùng đã được thêm vào dự án này.
                                    </div>
                                }
                            </form>
                        </div>

                        <div class="col-md-6">
                            <h5>Thành viên hiện tại</h5>
                            @if (Model.CurrentMembers.Any())
                            {
                                <div class="list-group">
                                    @foreach (var member in Model.CurrentMembers)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex align-items-center justify-content-between w-100">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-person-circle me-2 text-primary"></i>
                                                    <div>
                                                        <strong>@member.FullName</strong><br />
                                                        <small class="text-muted">@member.EmployeeCode - @member.Email</small>
                                                    </div>
                                                </div>
                                                <form asp-action="RemoveMember" method="post" class="ms-2"
                                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa thành viên này khỏi dự án?');">
                                                    <input type="hidden" name="projectId" value="@Model.ProjectId" />
                                                    <input type="hidden" name="userId" value="@member.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa thành viên">
                                                        <i class="bi bi-person-dash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle"></i> Chưa có thành viên nào trong dự án này.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <h6 class="alert-heading"><i class="bi bi-lightbulb"></i> Lưu ý:</h6>
                        <ul class="mb-0 small">
                            <li>Manager có thể thêm Members vào dự án của mình</li>
                            <li>Admin có thể thêm Members vào bất kỳ dự án nào</li>
                            <li>Mỗi người chỉ được thêm 1 lần vào mỗi dự án</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách dự án
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
