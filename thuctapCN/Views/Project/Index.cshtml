@model List<thuctapCN.Models.ProjectViewModel>
@{
    ViewData["Title"] = "Quản lý dự án";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-folder"></i> Quản lý dự án</h2>
                <div>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="AllComments" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-chat-dots"></i> Tất cả bình luận
                        </a>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Tạo dự án mới
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Mã dự án</th>
                                <th>Tên dự án</th>
                                <th>Mô tả</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày kết thúc</th>
                                <th class="text-center">Managers</th>
                                <th class="text-center">Thành viên</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">@project.ProjectCode</span>
                                    </td>
                                    <td>
                                        <strong>@project.Name</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(project.Description))
                                        {
                                            @(project.Description.Length > 50 
                                                ? project.Description.Substring(0, 50) + "..." 
                                                : project.Description)
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@project.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td>@project.EndDate.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@project.ManagerCount</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">@project.MemberCount</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Task" asp-action="Index" asp-route-projectId="@project.Id" 
                                               class="btn btn-sm btn-outline-info" title="Quản lý công việc">
                                                <i class="bi bi-list-task"></i>
                                            </a>
                                            <a asp-action="Comments" asp-route-id="@project.Id" 
                                               class="btn btn-sm btn-outline-secondary" title="Bình luận dự án">
                                                <i class="bi bi-chat-dots"></i>
                                            </a>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@project.Id" 
                                                   class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@project.Id" 
                                                   class="btn btn-sm btn-outline-danger" title="Xóa dự án">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            }
                                            <a asp-action="AddMember" asp-route-id="@project.Id" 
                                               class="btn btn-sm btn-outline-success" title="Thêm thành viên">
                                                <i class="bi bi-person-plus"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> 
            @if (User.IsInRole("Admin"))
            {
                <text>Chưa có dự án nào. Click "Tạo dự án mới" để bắt đầu.</text>
            }
            else
            {
                <text>Bạn chưa được thêm vào dự án nào.</text>
            }
        </div>
    }
</div>
