@model thuctapCN.Models.CreateProjectViewModel
@{
    ViewData["Title"] = "Tạo dự án mới";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-folder-plus"></i> Tạo dự án mới
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên dự án" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Nhập mô tả dự án (tùy chọn)"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedManagerIds" class="form-label"></label>
                            <select asp-for="SelectedManagerIds" class="form-select" multiple size="8">
                                @foreach (var user in Model.AvailableUsers)
                                {
                                    <option value="@user.Id">
                                        @user.FullName (@user.Email) - @user.EmployeeCode
                                    </option>
                                }
                            </select>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i> Nhấn Ctrl để chọn nhiều managers
                            </div>
                            <span asp-validation-for="SelectedManagerIds" class="text-danger small"></span>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <h6 class="alert-heading"><i class="bi bi-lightbulb"></i> Lưu ý:</h6>
                            <ul class="mb-0 small">
                                <li><strong>Mã dự án</strong> sẽ được tạo tự động (ví dụ: PROJ-001)</li>
                                <li><strong>Ngày kết thúc</strong> phải sau hoặc bằng ngày bắt đầu</li>
                                <li><strong>Tên dự án</strong> không được trùng với dự án khác</li>
                                <li>Bạn có thể thêm thành viên sau khi tạo dự án</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Tạo dự án
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
