@model thuctapCN.Models.CreateReportViewModel

@{
    ViewData["Title"] = "Gửi báo cáo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-text"></i> Gửi báo cáo công việc
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <p class="mb-1"><strong>Công việc:</strong> @Model.TaskName</p>
                        <p class="mb-0"><strong>Dự án:</strong> @Model.ProjectName</p>
                    </div>

                    <form asp-action="CreateReport" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TaskAssignmentId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">
                                <i class="bi bi-bookmark"></i> Tiêu đề báo cáo <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề báo cáo..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CurrentProgress" class="form-label fw-bold">
                                <i class="bi bi-bar-chart"></i> Tiến độ hiện tại (%)
                            </label>
                            <div class="input-group">
                                <input type="range" asp-for="CurrentProgress" class="form-range me-3" 
                                       min="0" max="100" step="5" id="progressRange" 
                                       oninput="document.getElementById('progressValue').value = this.value" />
                                <input type="number" asp-for="CurrentProgress" class="form-control" 
                                       style="width: 80px;" min="0" max="100" id="progressValue"
                                       oninput="document.getElementById('progressRange').value = this.value" />
                                <span class="input-group-text">%</span>
                            </div>
                            <div class="progress mt-2" style="height: 20px;">
                                <div class="progress-bar bg-success" id="progressBar" 
                                     style="width: @Model.CurrentProgress%">@Model.CurrentProgress%</div>
                            </div>
                            <span asp-validation-for="CurrentProgress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">
                                <i class="bi bi-card-text"></i> Nội dung báo cáo <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Content" class="form-control" rows="8" 
                                      placeholder="Mô tả tiến độ công việc, những gì đã hoàn thành, khó khăn gặp phải..."></textarea>
                            <div class="form-text">Tối đa 5000 ký tự</div>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AttachmentFile" class="form-label fw-bold">
                                <i class="bi bi-paperclip"></i> File đính kèm (tùy chọn)
                            </label>
                            <input asp-for="AttachmentFile" class="form-control" type="file" 
                                   accept=".pdf,.doc,.docx,.xls,.xlsx,.zip,.jpg,.png" />
                            <div class="form-text">
                                Chấp nhận: PDF, DOC, DOCX, XLS, XLSX, ZIP, JPG, PNG. Tối đa 10MB.
                            </div>
                            <span asp-validation-for="AttachmentFile" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.TaskAssignmentId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Gửi báo cáo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('progressRange').addEventListener('input', function() {
            var value = this.value;
            var bar = document.getElementById('progressBar');
            bar.style.width = value + '%';
            bar.textContent = value + '%';
        });
        document.getElementById('progressValue').addEventListener('input', function() {
            var value = this.value;
            if (value < 0) value = 0;
            if (value > 100) value = 100;
            var bar = document.getElementById('progressBar');
            bar.style.width = value + '%';
            bar.textContent = value + '%';
        });
    </script>
}
