@model IEnumerable<thuctapCN.Models.ReportListViewModel>

@{
    ViewData["Title"] = "Danh sách báo cáo";
    var taskId = ViewBag.TaskId;
    var taskName = ViewBag.TaskName;
    var projectName = ViewBag.ProjectName;
    var projectId = ViewBag.ProjectId;
    var canCreateReport = ViewBag.CanCreateReport ?? false;
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-file-earmark-text"></i> Báo cáo công việc</h2>
            <p class="text-muted mb-0">
                <strong>@taskName</strong> - @projectName
            </p>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@taskId" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            @if (canCreateReport)
            {
                <a asp-action="CreateReport" asp-route-taskId="@taskId" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Gửi báo cáo mới
                </a>
            }
        </div>
    </div>

    <!-- Thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Thống kê -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body py-3">
                    <h5 class="card-title"><i class="bi bi-file-text"></i> Tổng báo cáo</h5>
                    <h2 class="mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body py-3">
                    <h5 class="card-title"><i class="bi bi-envelope"></i> Chưa đọc</h5>
                    <h2 class="mb-0">@Model.Count(r => !r.IsRead)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body py-3">
                    <h5 class="card-title"><i class="bi bi-envelope-open"></i> Đã đọc</h5>
                    <h2 class="mb-0">@Model.Count(r => r.IsRead)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body py-3">
                    <h5 class="card-title"><i class="bi bi-paperclip"></i> Có file</h5>
                    <h2 class="mb-0">@Model.Count(r => r.HasAttachment)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách báo cáo -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
            <p class="text-muted mt-3">Chưa có báo cáo nào cho công việc này.</p>
            @if (canCreateReport)
            {
                <a asp-action="CreateReport" asp-route-taskId="@taskId" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Gửi báo cáo đầu tiên
                </a>
            }
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var report in Model)
            {
                <a asp-action="ReportDetails" asp-route-id="@report.Id" 
                   class="list-group-item list-group-item-action @(!report.IsRead ? "list-group-item-warning" : "")">
                    <div class="d-flex w-100 justify-content-between align-items-start">
                        <div class="d-flex">
                            <!-- Avatar -->
                            <div class="me-3">
                                @if (!string.IsNullOrEmpty(report.UserAvatar))
                                {
                                    <img src="@report.UserAvatar" alt="Avatar" 
                                         class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" 
                                         style="width: 50px; height: 50px;">
                                        <span class="text-white fw-bold">@report.UserName.Substring(0, 1).ToUpper()</span>
                                    </div>
                                }
                            </div>
                            
                            <!-- Nội dung -->
                            <div>
                                <h5 class="mb-1">
                                    @if (!report.IsRead)
                                    {
                                        <span class="badge bg-warning text-dark me-2">Mới</span>
                                    }
                                    @report.Title
                                    @if (report.HasAttachment)
                                    {
                                        <i class="bi bi-paperclip text-muted ms-1" title="Có file đính kèm"></i>
                                    }
                                </h5>
                                <p class="mb-1 text-muted">@report.ContentPreview</p>
                                <small class="text-muted">
                                    <i class="bi bi-person"></i> @report.UserName |
                                    <i class="bi bi-clock"></i> @report.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                        
                        <!-- Tiến độ -->
                        <div class="text-end" style="min-width: 100px;">
                            <div class="progress mb-1" style="height: 20px;">
                                <div class="progress-bar @(report.CurrentProgress >= 100 ? "bg-success" : "bg-info")" 
                                     style="width: @report.CurrentProgress%">
                                    @report.CurrentProgress%
                                </div>
                            </div>
                            <small class="text-muted">Tiến độ</small>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>
