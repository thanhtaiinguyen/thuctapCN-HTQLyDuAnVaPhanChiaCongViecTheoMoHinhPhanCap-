@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container py-4">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-building"></i> TechViet Solutions
        </h1>
        <p class="lead text-muted">Hệ thống Quản lý Dự án và Công việc</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Quick Actions -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <a asp-controller="Project" asp-action="Index" class="text-decoration-none">
                    <div class="card h-100 border-primary">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-folder text-primary" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Quản lý dự án</h5>
                            <p class="text-muted small mb-0">Xem và quản lý các dự án</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Task" asp-action="MyTasks" class="text-decoration-none">
                    <div class="card h-100 border-success">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-list-task text-success" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Công việc của tôi</h5>
                            <p class="text-muted small mb-0">Xem công việc được giao</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Schedule" asp-action="Index" class="text-decoration-none">
                    <div class="card h-100 border-info">
                        <div class="card-body text-center py-4">
                            <i class="bi bi-calendar3 text-info" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Lịch làm việc</h5>
                            <p class="text-muted small mb-0">Xem lịch và thông báo</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mb-5">
            <p class="text-muted mb-4">Vui lòng đăng nhập để sử dụng hệ thống</p>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
            </a>
        </div>
    }

    <!-- Company Info -->
    <div class="card bg-light border-0 mb-4">
        <div class="card-body p-4">
            <h5 class="fw-bold mb-3"><i class="bi bi-info-circle"></i> Thông tin công ty</h5>
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-2"><strong>Công ty:</strong> TechViet Solutions</p>
                    <p class="mb-2"><strong>Địa chỉ:</strong> 123 Nguyễn Huệ, Quận 1, TP.HCM</p>
                    <p class="mb-2"><strong>Điện thoại:</strong> 028 1234 5678</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-2"><strong>Email:</strong> contact@techviet.com.vn</p>
                    <p class="mb-2"><strong>Website:</strong> www.techviet.com.vn</p>
                    <p class="mb-2"><strong>Giờ làm việc:</strong> 8:00 - 17:30 (T2-T6)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Note -->
    <div class="text-center text-muted small">
        <p class="mb-0">© 2025 TechViet Solutions - Hệ thống Quản lý Dự án nội bộ</p>
    </div>
</div>
